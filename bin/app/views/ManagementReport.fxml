            <Button fx:id="stock" mnemonicParsing="false" onMouseClicked="#generateReportStock" prefHeight="38.0" prefWidth="117.0" styleClass="buttonGreen" text="Estoque">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
               <graphic>
                  <ImageView fitHeight="22.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/relatorio-48.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="sales" mnemonicParsing="false" onMouseClicked="#generateReportSales" prefHeight="38.0" prefWidth="117.0" styleClass="buttonGreen" text="Vendas">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
               <graphic>
                  <ImageView fitHeight="22.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/relatorio-48.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="providers" mnemonicParsing="false" onMouseClicked="#generateReportProvider" prefHeight="38.0" prefWidth="117.0" styleClass="buttonGreen" text="Fornecedores">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
               <graphic>
                  <ImageView fitHeight="22.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/relatorio-48.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
