<AnchorPane prefHeight="416.0" prefWidth="679.0" stylesheets="@../styles/applicationContainer.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controllers.reportControllers.ManagementReportController">
   <children>
      <HBox alignment="CENTER" layoutX="15.0" layoutY="138.0" prefHeight="78.0" prefWidth="650.0">
